<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/store_row_layout"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
>
    <RelativeLayout
        android:id="@+id/cart_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/green_800"
            android:text="1"/>

        <ImageView
            android:id="@+id/item_times_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="1dp"
            android:paddingLeft="-1dp"
            android:layout_toEndOf="@+id/cart_item_quantity"
            android:src="@drawable/ic_baseline_clear_24"
            android:tint="@color/green_800" />


        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:maxWidth="200dp"
            android:layout_toEndOf="@+id/item_times_icon"
            android:text="McFlurry Snickers"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginEnd="30dp"
            android:text="â‚¬2.00"/>

    </RelativeLayout>

</LinearLayout>